    <select id="findUserByPhone"  parameterType="java.lang.String" resultType="com.qc.rc.entity.User">
   		 select 
   		 USER_ID as userId,USER_PHONE as userPhone,USER_PASSWORD as userPassword 
   		 from RC_USER 
   		 where 
   		 USER_PHONE=#{userPhone}
 	</select>
 	
  	<insert id="insertNewUser" parameterType="com.qc.rc.entity.User" >
	
		INSERT INTO RC_USER(
		USER_ID,
		USER_PHONE,
		USER_PASSWORD,
		CREATE_TIME
		) 
		VALUES(
		#{userId,jdbcType=VARCHAR},
		#{userPhone,jdbcType=VARCHAR},
		#{userPassword,jdbcType=VARCHAR},
		SYSDATE
		)	
		 
	</insert>
	
	<update id="deleteShareById"  parameterType="java.lang.String">
	
		    update RC_SHARING_CENTER set SC_DELETE_FLAG = 1 where SC_ID=#{scId}
	</update>
	
